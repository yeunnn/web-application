<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <nav>
        <div class="nav-content">
            <div class="title">Appointment Management</div>
            <div class="nav-links">
                <a href="/appointments">View Appointments</a>
                <a href="/">Add Appointment</a>
            </div>
        </div>
    </nav>
    <h1><%= title %></h1>
    <table>
        <tr>
            <th>Category</th>
            <th>Number of Appointments</th>
        </tr>
        <% data.forEach(function(row) { %>
            <tr>
                <td><%= row.hospital || row.doctor %></td>
                <td><%= row.number_of_appointments %></td>
            </tr>
        <% }); %>
    </table>
</body>
</html>