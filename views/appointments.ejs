<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>View Appointments</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <nav>
        <div class="nav-content">
            <div class="title">Appointment Management</div>
            <div class="nav-links">
                <a href="/appointments">View Appointments</a>
                <a href="/">Add Appointment</a>
            </div>
        </div>
    </nav>

    <h1>Appointments</h1>

    <!-- Search Form -->
    <div class="left">
        <div class="search-form">
            <form action="/appointments/search" method="GET">
                <input type="text" name="search" placeholder="Search by hospital or doctor specialty" required>
                <button type="submit">Search</button>
                <a href="/appointments" class="clearbtn">Clear Search</a>
            </form>
        </div>
    </div>

    <!-- Report Links -->
    <div class="right">
        <div class="reports">
            <b>Reports:</b> <a href="/reports/hospitals" class="report-button">Appointments per Hospital</a>
            <a href="/reports/doctors" class="report-button">Appointments per Doctor Specialty</a>
        </div>
    </div>

    <table>
        <tr>
            <th>Appointment ID</th>
            <th>Date of Appointment</th>
            <th>Patient Gender</th>
            <th>Patient Age</th>
            <th>Hospital Name</th>
            <th>Doctor Specialty</th>
            <th>Doctor Age</th>
            <th>Region</th>
            <th>Actions</th>
        </tr>
        <% appointments.forEach(function(appointment) { %>
            <tr>
                <td><%= appointment.apptid %></td>
                <td><%= appointment.date_of_appointment ? new Date(appointment.date_of_appointment).toISOString().slice(0, 10) : 'Date not provided' %></td>
                <td><%= appointment.patient_gender %></td>
                <td><%= appointment.patient_age %></td>
                <td><%= appointment.hospital_name %></td>
                <td><%= appointment.doctor_specialty %></td>
                <td><%= appointment.doctor_age %></td>
                <td><%= appointment.region %></td>
                <td>
                    <a href="/appointments/edit/<%= appointment.apptid %>">Edit</a>
                    <a href="/appointments/delete/<%= appointment.apptid %>" onclick="return confirm('Are you sure?');">Delete</a>
                </td>
            </tr>
        <% }); %>
    </table>
</body>
</html>
